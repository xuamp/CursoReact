<div class="contenedor-login">
	<h1 class="login">Modificar</h1>
    <div class="contenedor-agregar">	
       <form action="/admin/novedades/modificar" method="post"> 
       <input type="hidden" value="{{novedad.id}}" name="id">	
		<label class="label1">Titulo:</label>
        <textarea type="text" name="Titulo" class="input3">{{novedad.Titulo}}</textarea><br>
		<label class="label1">Copete:</label>
        <textarea type="text" name="Copete" class="input3">{{novedad.Copete}}</textarea><br><br>
        <label class="label1">Cuerpo:</label>
        <textarea type="text" name="Cuerpo" class="input2">{{novedad.Cuerpo}}</textarea><br><br>
		<button type="submit" class="boton-enviar">Modificar</button>
       </form>
        {{#if error}}
           <p>{{message}}</p>
        {{/if}}
    </div>
</div>